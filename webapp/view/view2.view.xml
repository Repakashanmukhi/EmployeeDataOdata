<mvc:View controllerName="odata.controller.view2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="pages" title="{i18n>title}">
    <content>
        <Button text="Add" press="Info"/>
    </content>
    <Table headerText="Employee Personal Information" items="{/EmployeeInfoEmergencyContact}">

        <columns>
            <Column>
            <Text text="EmployeeId"/>
            </Column>
            <Column>
            <Text text="Contact Name"/>
            </Column>
            <Column>
            <Text text="Relationship"/>
            </Column>
            <Column>
            <Text text="Contact Phone"/>
            </Column>
            <Column>
            <Text text="Contact Email"/>
            </Column>
         </columns>
         <items>
            <ColumnListItem >
               <Text text="{ID}"/>
               <Text text="{ContactName}"/>
               <Text text="{Relationship}"/>
               <Text text="{ContactPhone}"/>
               <Text text="{ContactEmail}"/>
            </ColumnListItem>
         </items>

     </Table>
    </Page>
</mvc:View>