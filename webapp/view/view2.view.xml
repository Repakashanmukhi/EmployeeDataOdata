
<mvc:View controllerName="odata.controller.view2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="pages" title="{i18n>title}">
    <content>
    </content>
	<Bar>
	<contentRight>
        <Button icon="sap-icon://add" press="onOpenDialog"></Button>
    </contentRight>
	<contentMiddle>
	    <Title text="Employee Details" ></Title>
	</contentMiddle>
	  <contentLeft>
	  <Button icon="sap-icon://nav-back" press="NavBack"></Button>
	  </contentLeft>
	</Bar>
	 <List items="{/items}"
	       id="Data"
		   growing="true"
		   growingThreshold="4"
		   growingScrollToLoad="false">
		<StandardListItem
            type="Active"
            press="onCLick"	
			title="{ContactName}"/>
	 </List>
    </Page>
</mvc:View>
  

  