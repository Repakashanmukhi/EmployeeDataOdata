<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:core= "sap.ui.core" xmlns:f="sap.ui.layout.form" 
xmlns="sap.m">
<Dialog id="update" title="Update Details" >
          
               <VBox class="sapUiTinyMargin" >
                    <Label text="EmployeeID" />
                    <Input id="id_E" width="250px" editable="true"/>
                    <Label text="First Name" />
                    <Input id="FN_E" width="250px" editable="true"/>
                    <Label text="Email"/>
                    <Input id="E_E" width="250px" editable="true"/>
                    <Label text="Phone"/>
                    <Input id="P_E" width="250px" editable="true"/>
                    <Label text="Department" />
                    <Input id="D_E" width="250px" editable="true"/>
                    <Label text="Position" />
                    <Input id="PO_E" width="250px" editable="true"/>
                    <Label text="Joining Date" />
                    <Input id="JD_E" width="250px" editable="true"/>
               </VBox>
          <footer>
               <Toolbar>
               <ToolbarSpacer/>
                <Button text="Update" press="onUpdateDialog"></Button>
                <Button text="Close" press="onCancleDialog"></Button>
              </Toolbar>
           </footer>
</Dialog>
</core:FragmentDefinition>