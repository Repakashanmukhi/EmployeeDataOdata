
<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:core= "sap.ui.core" xmlns:f="sap.ui.layout.form" 
xmlns="sap.m">
<Dialog id="create" title="Employee Details ">
         <customHeader>
             <Bar>
                <contentLeft>
                     <Text text="Employee Details"></Text>
                </contentLeft>
                <contentRight>
                    <Button icon="sap-icon://add" press=" "></Button>
                </contentRight>
             </Bar>
         </customHeader> 
               <VBox class="sapUiTinyMargin"> 
               
                <!-- <Button icon="sap-icon://add" press="onOpenDialog"></Button> -->
                    <Label text="First Name" />
                    <Input id="efirstName" width="250px" editable="true"/>
                    <Label text="Email"/>
                    <Input id="eEmail" width="250px" editable="true"/>
                    <Label text="Phone"/>
                    <Input id="ePhone" width="250px" editable="true"/>
                    <Label text="Department" />
                    <Input id="edepartment" width="250px" editable="true"/>
                    <Label text="Position" />
                    <Input id="eposition" width="250px" editable="true"/>
                    <Label text="Joining Date" />
                    <Input id="eJoiningDate" width="250px" editable="true"/> 
               </VBox>
            
            <Table id="tempTable">
        <columns>
            <Column>
                <Text text="First Name"/>
            </Column>
            <Column>
                <Text text="Email"/>
            </Column>
            <Column>
                <Text text="Phone"/>
            </Column>
            <Column>
                <Text text="Department"/>
            </Column>
            <Column>
                <Text text="Position"/>
            </Column>
            <Column>
                <Text text="Joining Date"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{FirstName}" />
                    <Text text="{Email}" />
                    <Text text="{Phone}" />
                    <Text text="{Department}" />
                    <Text text="{Position}" />
                    <Text text="{JoiningDate}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    
       <footer>
               <Toolbar>
               <ToolbarSpacer/>
            <Button text="Submit" press="onSubmitDialog"></Button>
            <Button text="Reset" press="onClear"></Button>
            <Button text="Close" press="onclose"></Button>
           </Toolbar>
        </footer>
</Dialog>
</core:FragmentDefinition>
